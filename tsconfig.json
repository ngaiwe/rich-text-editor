{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@editor": ["./packages/rich-text-editor/src/"]
    },
    "removeComments": true,
    "declaration": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true
  },
  "include": ["packages/*/src", "packages/*/src/@types"],
  "exclude": ["node_modules", "examples", "website", "**/*.mjs", "*.js"]
}
