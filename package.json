{
  "name": "@editor/react-editor",
  "displayName": "Editor React",
  "author": "weiran",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^18",
    "pnpm": "^8"
  },
  "packageManager": "pnpm@8.15.8",
  "workspaces": {
    "packages": [
      "packages/*",
      "example",
      "website"
    ]
  },
  "scripts": {
    "check-env": "echo 检查环境成功",
    "preinstall": "npx only-allow pnpm",
    "dev:all": "pnpm --recursive dev",
    "build:all": "pnpm --recursive build",
    "example:start": "cd example && pnpm dev",
    "doc:start": "cd website && pnpm start",
    "doc:build": "cd website && pnpm run build",
    "doc:deploy": "sh scripts/deploy-docs.sh"
  },
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@types/react": "18.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "@types/react": "^18.0.0",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.5.1",
    "codecov": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.3.1",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/runtime": "^7.20.0",
    "@types/node": "^18.19.1",
    "npm-run-all": "^4.1.3",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "gen-flow-files": "^0.4.11",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "vite": "^4.4.9",
    "unplugin-preprocessor-directives": "1.0.3",
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^6"
