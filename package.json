  "private": true,
  "engines": {
    "node": "^18",
    "pnpm": "^8"
  },
  "packageManager": "pnpm@8.15.8",
  "workspaces": {
    "packages": [
      "packages/*",
      "example",
      "website"
    ]
  },
  "scripts": {
    "check-env": "echo 检查环境成功",
    "preinstall": "npx only-allow pnpm",
    "dev:all": "pnpm --recursive dev",
    "build:all": "pnpm --recursive build",
    "example:start": "cd example && pnpm dev",
    "doc:start": "cd website && pnpm start",
    "doc:build": "cd website && pnpm run build",
    "doc:deploy": "sh scripts/deploy-docs.sh",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
